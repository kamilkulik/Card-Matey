{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "semi": [2],
    "quotes": [2, "single", { "avoidEscape": true }],
    "jsx-quotes": [2, "prefer-single"],
    "react/jsx-filename-extension": [2, { "extensions": [".js", ".jsx"] }]
  }
}
